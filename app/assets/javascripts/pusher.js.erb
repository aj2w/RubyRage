
// Enable pusher logging - don't include this in production
Pusher.log = function(message) {
  if (window.console && window.console.log) {
    window.console.log(message);
  }
};

var pusher = new Pusher('<%= Pusher.key %>');
var channel = pusher.subscribe('rubyrage_thomas');

channel.bind('my_event', function(data) {
  // $('#opponent').append(data.message);
  alert(data.message)
});

channel.bind('broadcasting', function(data) {
  console.log(data.message);
});

$('#battle-button').click(function(){
  // startSendingRequest();
  setInterval(startSendingRequest, 1000);
})

function startSendingRequest() {
  $.ajax({
    url: "/games/startBroadcasting",
    type: "get",
    data: "json"
  })
}