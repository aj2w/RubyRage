<%= form_tag(sessions_path) do %>
<p>
  <%= label_tag :username %>
  <%= text_field_tag :username, params[:username]%>
</p>
<p>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
</p>
<%= submit_tag "Sign in", :class => 'button' %>
<% end %>

<%= link_to 'Create an Account', new_user_path, class:'button', remote: true %>

