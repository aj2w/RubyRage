
<div class="row">
  <div class="small-4 large-centered columns">
    <h1 class="title">Ruby Rage</h1>

    <!-- <a href="/games/dashboard" class="play button round">Play!</a> -->
    <button class="play button round">Play!</button>


  <div class="form_area">
    <fieldset>
    <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email]%>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
    <%= submit_tag "Sign in", :class => 'button' %>
    <% end %>

    <a href="/users/new" class="button">Create an account</a>
  </fieldset>
  </div>

  </div>
</div>