<DOCTYPE! html>
<html>
<head>
  <title>
    <%= javascript_include_tag "loginform" %>
  </title>
</head>

<body>
  <h1>Ruby Rage</h1>
  <!-- <p>Press button and it will turn into log in input</p> -->

  <button class="play">Play!</button>

  <div class="form_area">
    <%= form_tag sessions_path do %>
    <p>
      <%= label_tag :email %>
      <%= text_field_tag :email, params[:email]%>
    </p>
    <p>
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </p>
    <p><%= submit_tag "Sign in"%></p>
    <% end %>
  </div>


</body>
</html>

